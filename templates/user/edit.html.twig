		<h1>Modifier mon profil</h1>
		
		<h3 class="mt-5 mb-4">Ajouter ou modifier mon avatar</h3>
		
		{% if user.picture %}
			<img src="{{ asset('/uploads/images/user/' ~ user.picture) }}" class="mb-3" alt="Avatar">
		{% else %}
			<img src="{{ asset('/uploads/images/user/default.jpg') }}" class="mb-3" alt="Avatar">
		{% endif %}
		
		{% form_theme form 'bootstrap_5_layout.html.twig' %}
		{{ form_start(form) }}
		<div class="row">
			<div class="col col-md-4">{{ form_row(form.picture) }}</div>
		</div>
		{{ form_rest(form) }}
		<button class="btn btn-primary">Valider</button>
		{{ form_end(form) }}
		
		
		
