{% extends 'base.html.twig' %}

{% block title 'Inscription' %}

{% block body %}
	<style>
		#registration_form_agreeTerms {
			float: none;
		}
	</style>
	<div class="mt-3 text-center">
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		
		<h1 class="h3 mb-4 font-weight-normal">Page d'inscription</h1>
		
		<div class="row justify-content-center">
			{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
			<div class="col-xxl-3 col-xl-4 col-md-5">
				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.username) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.password, {
					label: 'Mot de passe'
				}) }}
				{{ form_row(registrationForm.agreeTerms) }}
				
				<button class="btn btn-info text-white mt-3" type="submit">
					S'inscrire
				</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
