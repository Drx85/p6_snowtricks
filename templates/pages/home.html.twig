{% extends 'base.html.twig' %}

{% block title 'Accueil' %}

{% block body %}
	
	<div class="container text-center mt-4">
		<h1>Bienvenue sur Snowtricks</h1>
	</div>
	
	<div class="container">
		<h2>Tous les tricks</h2>
		<div class="row flex">
			{% for trick in tricks %}
				<div class="col-3">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title"><a href="{{ path('trick.show', {id: trick.id, slug: trick.slug}) }}">{{ trick.title }}</a></h5>
							<p class="card-text">{{ trick.description | nl2br }}</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}