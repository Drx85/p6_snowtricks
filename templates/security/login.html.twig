{% extends 'base.html.twig' %}

{% block title 'Connection' %}

{% block body %}
	<form method="post">
		<div class="mt-3 text-center">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			
			{% if app.user %}
				<div class="my-3">
					Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
				</div>
			{% endif %}
			
			<h1 class="h3 mb-4 font-weight-normal">Page de connection</h1>
			
			<div class="row justify-content-center">
				<div class="col-xxl-3 col-xl-4 col-md-5 col-centered">
					<label for="inputUsername">Nom d'utilisateur</label>
					<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-4" autocomplete="username" required autofocus>
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>
					
					<input type="hidden" name="_csrf_token"
						   value="{{ csrf_token('authenticate') }}">
				
				<button class="btn btn-info text-white mt-3" type="submit">
					Se connecter
				</button>
				</div>
				<p class="mt-3"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a></p>
			</div>
		</div>
	</form>
{% endblock %}
