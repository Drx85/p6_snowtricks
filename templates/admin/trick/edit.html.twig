{% extends 'base.html.twig' %}

{% block body %}
	
	<div class="container mt-4">
		<h1>Editer la figure</h1>
		{{ include ('admin/trick/_form.html.twig') }}
		
		{% if trick.images.0 is defined %}
			<h3 class="mt-3">Supprimer des miniatures</h3>
		{% endif %}
		
		{% for image in trick.images %}
			<div>
				<img src="{{ asset('/uploads/images/' ~ image.name) }}" alt="Image" width="150">
				<a href="{{ path('admin.image.delete', {id: image.id}) }}"
				   data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
			</div>
		{% endfor %}
		
		{% if trick.videos.0 is defined %}
			<h3 class="mt-3">Supprimer des vid√©os</h3>
		{% endif %}
		
		{% for video in trick.videos %}
			<div>
				<iframe width="400" height="250" src="{{ video.link }}" frameborder="0"
						allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
				<a href="{{ path('admin.video.delete', {id: video.id}) }}"
				   data-delete data-token="{{ csrf_token('delete' ~ video.id) }}">Supprimer</a>
			</div>
		{% endfor %}
	
	
	</div>

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/media.js') }}"></script>
{% endblock %}


