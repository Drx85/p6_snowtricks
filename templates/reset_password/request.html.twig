{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
	<div class="ms-5">
		{% for flashError in app.flashes('reset_password_error') %}
			<div class="alert alert-danger mt-3" role="alert">{{ flashError }}</div>
		{% endfor %}
		<h1 class="mt-4 mb-5">Réinitialisation du mot de passe</h1>
		
		<div class="mb-2">
			<small>
				Veuillez entre votre adresse email, nous y enverrons un lien pour réinitialiser votre mot de passe.
			</small>
		</div>
		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email) }}
		
		<button class="btn btn-primary mt-4">Envoyer l'email de réinitialisation</button>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
