{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
	<div class="text-center">
		{% for flashError in app.flashes('reset_password_error') %}
			<div class="alert alert-danger mt-3" role="alert">{{ flashError }}</div>
		{% endfor %}
		<h1 class="mt-4 mb-5">Réinitialisation du mot de passe</h1>
		
		<div class="mb-2">
			<small>
				Veuillez entre votre adresse email, nous y enverrons un lien pour réinitialiser votre mot de passe.
			</small>
		</div>
		<div class="row justify-content-center">
			{% form_theme requestForm 'bootstrap_5_layout.html.twig' %}
			<div class="col-xxl-3 col-xl-4 col-md-5">
				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				
				<button class="btn btn-info text-white mt-3">Envoyer l'email de réinitialisation</button>
				{{ form_end(requestForm) }}
			</div>
		</div>
	</div>
{% endblock %}
